<Window x:Class="agit_polman_2023_P3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:agit_polman_2023_P3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGridView1" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged"/>
        <TextBox x:Name="txtFilename" HorizontalAlignment="Left" Margin="114,337,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cboSheet" HorizontalAlignment="Left" Margin="114,376,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboSheet_SelectionChanged"/>
        <Button x:Name="btnImport" Content="Import" HorizontalAlignment="Left" Margin="587,337,0,0" VerticalAlignment="Top" Click="btnImport_Click"/>
        <Button Content="Export" HorizontalAlignment="Left" Margin="587,378,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
